<% layout('layout') -%>

<div id="intro" class="section scrollspy">
    <div class="container">
      <div class=" card-panel row">
          <form class="col s12" method="post">
            <div class="row">
              <div  class="col s12">
                  <h2 class="center header text_h2"><span class="span_h2"> Volunteer Login</span></h2>
              </div>

              <% if(message.length > 0) { %>

                <div class="card-panel col offset-l3 l6 m12 s12">
                  <p><span class="red-text text-darken-2"> <%= message %></span><p>
                </div>

              <% } %>

            </div>

            <div class="row">
              <div class="input-field col offset-l3 l6 m12 s12">
                <input placeholder="Enter your email" id="email" name="email" type="email" class="validate">
                <label for="email">Email</label>
              </div>

            </div>

            <div class="row">

              <div class="input-field col offset-l3 l6 m12 s12">
                <input placeholder="Enter password to set" id="password" name="password" type="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>


            <div class="row">
              <div class="input-field col l12 m12 s12 center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Login
                  <i class="mdl-material-icons fa fa-send right"></i>
                </button>
              </div>
            </div>

          </form>
        </div>
    </div>
</div>
