<!--Intro and service-->

<% layout('layout') -%>
  <div class="row">
    <div class="col l8 m12 s12">
      <div class="section scrollspy">
        <div class="row card-panel">
            <div  class="col s12">
                <h3 class="center header text_h2"><span class="span_h2"> Send us a Message</span></h3>
            </div>

            <% if(errors.length > 0) { %>

              <div class="card-panel col s12">
                <p><span class="blue-text text-darken-2"> <%= errors %></span><p>
              </div>

            <% } %>

            <form class="col s12 center" method="post">
              <div class="row">
                <div class="input-field col l12 s12">
                  <i class="small fa fa-user prefix"></i>
                  <input name="name" placeholder="Enter your name" id="name" type="text" class="validate">
                  <label for="icon_prefix">Name</label>
                </div>
                <div class="input-field col l6 s12">
                  <i class="small fa fa-envelope prefix"></i>
                  <input name="email" placeholder="Enter your email" id="email" type="tel" class="validate">
                  <label for="icon_telephone">Email</label>
                </div>
                <div class="input-field col l6 s12">
                  <i class="small fa fa-phone-square prefix"></i>
                  <input name="mobile" placeholder="Enter your contact number" id="mobile" type="tel" class="validate">
                  <label for="icon_telephone">Contact</label>
                </div>
                <div class="input-field col l12 s12">
                    <i class="small fa fa-pencil-square prefix"></i>
                  <textarea name="message" placeholder="Enter your message" id="message" class="materialize-textarea"></textarea>
                  <label for="textarea1">Message</label>
                </div>
              </div>

              <div class="row">
                <div class="input-field col l12 m12 s12 center">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Send Message
                    <i class="mdl-material-icons fa fa-send right"></i>
                  </button>
                </div>
              </div>
            </form>
        </div>
      </div>

    </div>


    <div class="col l4 m12 s12">
      <div class="section scrollspy">
        <div class="row card-panel">
      <div class="container">
        <ul class="collection with-header">
        <li class="collection-header"><h3 class="text_h2"><span class="span_h2">Emails</span></h2></li>
        <!-- <li class="collection-item">contact@nssdtu.in</li> -->
